
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/commit-message.schema.json",
  "title": "Conventional Commit Message",
  "type": "object",
  "required": ["title"],
  "properties": {
    "title": {
      "type": "string",
      "description": "First line of the commit message",
      "pattern": "^((feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\\([a-z0-9\\-\\/]+\\))?(!)?:\\s)[^\\s].{0,49}$"
    },
    "body": {
      "type": "string",
      "description": "Optional body wrapped at ~72 columns",
      "minLength": 0
    },
    "footers": {
      "type": "array",
      "description": "Issue/PR relations like 'Closes: #123'",
      "items": {
        "type": "string",
        "pattern": "^(Closes|Refs):\\s#\\d+$"
      }
    },
    "breakingChange": {
      "type": "boolean",
      "description": "True if the commit introduces a breaking change"
    }
  },
  "allOf": [
    {
      "if": { "properties": { "breakingChange": { "const": true } } },
      "then": {
        "anyOf": [
          { "properties": { "title": { "pattern": "!.+:" } } },
          { "properties": { "body": { "pattern": "(?s).*BREAKING CHANGE:\\s" } } }
        ]
      }
    }
  ],
  "additionalProperties": false
}
