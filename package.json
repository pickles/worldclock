{
  "name": "worldclock-react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "playwright test",
    "test:fast": "playwright test tests/basic-functionality.spec.js --project=chromium -g @smoke",
    "test:ci": "playwright test --reporter=line",
    "test:fast:timeout": "powershell -Command \"$p=Start-Process npx -ArgumentList 'playwright','test','--project=chromium','-g','@smoke' -PassThru; if(-not $p.WaitForExit(120)){ $p.Kill(); exit 124 } ; exit $p.ExitCode\"",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "echo HTMLレポートは無効です (line reporter運用)",
    "prepare": "husky",
    "mcp:chrome": "npx chrome-devtools-mcp"
  },
  "dependencies": {
    "city-timezones": "^1.3.2",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.55.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "chrome-devtools-mcp": "latest",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^9.1.7",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.16.4"
  }
}
